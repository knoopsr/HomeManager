<UserControl
    x:Class="HomeManager.View.Exceptions.ucExceptions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View.Exceptions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">
    <Grid DataContext="{Binding Source={StaticResource VML}, Path=ExceptionsViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="1">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myExceptions}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="Overzicht Exceptions" />
                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="top" />
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="700" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="300" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,10,10,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ComboBox
                        Width="200"
                        DisplayMemberPath="AccountName"
                        ItemsSource="{Binding MijnAccounten}"
                        SelectedItem="{Binding SelectedAccount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="AccountID" />
                    <ComboBox
                        Width="200"
                        Margin="5,0,0,0"
                        ItemsSource="{Binding MijnExceptions}"
                        SelectedItem="{Binding SelectedExceptions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <ComboBox
                        Width="200"
                        Margin="5,0,0,0"
                        ItemsSource="{Binding MijnTargetSites}"
                        SelectedItem="{Binding SelectedTargetSites, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10,5,10,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="Vanaf:"
                        FontSize="14"
                        Foreground="Black" />
                    <DatePicker Width="200" SelectedDate="{Binding StartDate, Mode=TwoWay}" />
                    <Label
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Content="Tot:"
                        FontSize="14"
                        Foreground="Black" />
                    <DatePicker Width="200" SelectedDate="{Binding EndDate, Mode=TwoWay}" />
                    <Button
                        Width="30"
                        Height="30"
                        Margin="10,0,0,0"
                        Command="{Binding cmdExport}"
                        CommandParameter="{Binding}"
                        Style="{StaticResource Excel}" />
                </StackPanel>
                <DataGrid
                    Grid.Row="4"
                    Grid.Column="1"
                    MaxHeight="300"
                    Margin="10,0,10,10"
                    AutoGenerateColumns="False"
                    ColumnWidth="*"
                    IsReadOnly="True"
                    ItemsSource="{Binding MijnGefilterdeCollectie}"
                    RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding AccountName}"
                            Header="Account" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding ExceptionName}"
                            Header="Exception" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Module}"
                            Header="Module" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding Source}"
                            Header="Source" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding TargetSite}"
                            Header="TargetSite" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding ExceptionMessage}"
                            Header="ExceptionMessage" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding InnerExceptionMessage}"
                            Header="InnerExceptionMessage" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding StackTrace}"
                            Header="StackTrace">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="NoWrap" />
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                    <Setter Property="ToolTip" Value="{Binding StackTrace}" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding DotNetAssembly}"
                            Header="DotNetAssembly" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding CreatedOn, StringFormat={}{0:dd/MM/yyyy HH:mm:ss}}"
                            Header="Datum Tijd" />
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="HorizontalScrollBarVisibility" Value="Visible" />
                            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="LightBlue" />
                                    <Setter Property="Foreground" Value="Black" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>