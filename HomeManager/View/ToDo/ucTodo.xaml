<UserControl
    x:Class="HomeManager.View.ucTodo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid DataContext="{Binding Source={StaticResource VML}, Path=ToDoViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button
                Name="OpenTodoCollecties"
                Width="30"
                Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Command="{Binding OpenTodoCollectiesCommand}"
                Style="{StaticResource AddButton}" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <Button
                Name="OpenTodoPopupViewbtn"
                Width="30"
                Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Command="{Binding OpenTodoPopupCommand}"
                Style="{StaticResource AddButton}" />
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2">
            <Button
                Width="30"
                Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Command="{Binding OpenTodoDetailsCommand}"
                Style="{StaticResource AddButton}" />
        </StackPanel>
        <ListBox
            Name="ToDoCollectiesOpvullingListView"
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding MijnCollectie}"
            SelectedItem="{Binding SelectedCollectie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <ListBox
            Grid.Row="1"
            Grid.Column="1"
            BorderBrush="Gray"
            BorderThickness="1" />
        <ListBox
            Grid.Row="1"
            Grid.Column="2"
            BorderBrush="Gray"
            BorderThickness="1" />
        <!--  Popup elements  -->
        <Popup
            Name="TodoPopup"
            Width="700"
            Height="500"
            IsOpen="{Binding IsTodoPopupOpen}"
            Placement="Center"
            StaysOpen="False">
            <Border
                Width="700"
                Height="500"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1">
                <local:ucTodoPopup />
            </Border>
        </Popup>
        <Popup
            Name="TodoCollecties"
            Width="700"
            Height="500"
            IsOpen="{Binding IsTodoCollectiesOpen}"
            Placement="Center"
            StaysOpen="False">
            <Border
                Width="700"
                Height="500"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1">
                <local:ucCollecties />
            </Border>
        </Popup>
        <Popup
            Name="TodoDetails"
            Width="700"
            Height="500"
            IsOpen="{Binding IsTodoDetailsOpen}"
            Placement="Center"
            StaysOpen="False">
            <Border
                Width="700"
                Height="500"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1">
                <local:ucTodoDetails />
            </Border>
        </Popup>
    </Grid>
</UserControl>
