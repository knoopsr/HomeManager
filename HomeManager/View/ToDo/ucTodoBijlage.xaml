<UserControl
    x:Class="HomeManager.View.ucTodoBijlage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="300"
    d:DesignWidth="800"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d"
    AllowDrop="True">

    <Grid DataContext="{Binding Source={StaticResource VML}, Path=TodoBijlageViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Title Bar  -->
        <Border
            Grid.Row="0"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="1">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myPathPeople}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="Todo Bijlage" />
                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="Top" />
            </Grid>
        </Border>

        <!--  Content Area  -->
        <Border
            Grid.Row="1"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />

                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="150" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ListBox
                    Grid.Row="1"
                    Grid.RowSpan="5"
                    Grid.Column="0"
                    Width="350"
                    Height="200"
                    HorizontalAlignment="Right"
                    ItemsSource="{Binding MijnTodoBijlage}"
                    SelectedItem="{Binding MijnSelectedTodoBijlage, UpdateSourceTrigger=PropertyChanged}"/>
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <Button
                        x:Name="UploadFilebtn"
                        ToolTip="Upload File"
                        Width="30"
                        Height="30"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Left"
                        AllowDrop="True"
                        Command="{Binding cmdUploadFile}"
                        DragEnter="Button_DragEnter"
                        Drop="Button_Drop"
                        Style="{StaticResource UploadButton}" />
                    <Button
                        x:Name="ViewFilebtn"
                        ToolTip="File bekijken"
                        Width="30"
                        Height="30"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Style="{StaticResource EyeButton}"
                        Command="{Binding cmdViewFile}"/>
                </StackPanel>

                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Content="Naam"
                    FontSize="11" />
                <TextBox
                    x:Name="txtBijlageNaam"
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="350"
                    HorizontalAlignment="Left"
                    Text="{Binding MijnSelectedTodoBijlage.BijlageNaam}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
