<UserControl x:Class="HomeManager.View.ucTodoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeManager.View"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <Border BorderBrush="Red" BorderThickness="1" CornerRadius="5" Background="MistyRose" Padding="10" Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Verticale rechthoek -->
            <Rectangle Grid.Column="0" Width="10" Fill="{Binding VerticalBarColor}" />

            <!-- Titel en details -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" Foreground="Black" />
                <TextBlock Text="{Binding Detail}" FontSize="12" Foreground="Gray" />
            </StackPanel>

            <!-- Checkbox -->
            <CheckBox Grid.Column="1" Margin="5,0" VerticalAlignment="Center" />

            <!-- Bewerk-icoon -->
            <Button Grid.Column="2" Style="{StaticResource EditTodoImage}" Margin="5,0" Width="20" Height="20" VerticalAlignment="Center"
                    Command="{Binding EditCommand}" CommandParameter="{Binding}" />

            <!-- Verwijder-icoon -->
            <Button Grid.Column="3" Style="{StaticResource DeleteTodoImage}" Margin="5,0" Width="20" Height="20" VerticalAlignment="Center"
                    Command="{Binding DeleteCommand}" CommandParameter="{Binding}" />

            <!-- Paperclip-icoon -->
            <Button Grid.Column="4" Style="{StaticResource PaperclipTodoImage}"  Margin="5,0" Width="20" Height="20" VerticalAlignment="Center"/>


        </Grid>
    </Border>
</UserControl>
