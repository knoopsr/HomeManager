<UserControl
    x:Class="HomeManager.View.Security.ucUnlockUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:B="clr-namespace:HomeManager.Behaviors"
    xmlns:local="clr-namespace:HomeManager.View.Security"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="500"
    d:DesignWidth="400"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">

    <Grid Width="380" DataContext="{Binding Source={StaticResource VML}, Path=UnLockViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="{StaticResource myTitleBar}">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myUnlock}"
                        Fill="{StaticResource myWerkBalk}"
                        Stretch="Fill" />
                    <Label
                        Margin="5,0,0,0"
                        Content="Ontgrendel Computer"
                        Foreground="{StaticResource myWerkBalk}" />

                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="top" />
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Margin="5,5,5,5"
            BorderBrush="{StaticResource myTitleBar}"
            BorderThickness="1"
            CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <ListBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="280"
                    Height="350"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding MijnCollectie}"
                    B:ListBoxAttachedProperties.BindableSelectedItems="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Multiple">






                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <!--  Standaardachtergrond en rand verwijderen  -->
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Margin" Value="0,2,0,2" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

                            <!--  Aangepaste ControlTemplate  -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border
                                            Name="Border"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!--  Geselecteerd item  -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{x:Null}" />
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{x:Null}" />
                                            </Trigger>
                                            <!--  MouseOver  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="258"
                                Height="50"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CornerRadius="25">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="LightBlue" />
                                        <Setter Property="BorderBrush" Value="Black" />
                                        <Style.Triggers>
                                            <!--  Geselecteerd item  -->
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                <Setter Property="Background" Value="LightGreen" />
                                                <Setter Property="BorderBrush" Value="DarkGreen" />
                                                <Setter Property="BorderThickness" Value="2" />
                                            </DataTrigger>
                                            <!--  MouseOver  -->
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                <Setter Property="Background" Value="LightYellow" />
                                                <Setter Property="BorderBrush" Value="Orange" />
                                                <Setter Property="BorderThickness" Value="2" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="40" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        Width="44"
                                        Height="44"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="22">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                BlurRadius="10"
                                                Opacity="0.5"
                                                ShadowDepth="5"
                                                Color="Black" />
                                        </Border.Effect>
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Persoon.Foto, TargetNullValue='https://p92.com/binaries/content/gallery/p92website/technologies/c-sharp-overview.png'}" Stretch="UniformToFill" />
                                        </Border.Background>
                                    </Border>

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <TextBlock
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Foreground="Black"
                                            Text="{Binding Persoon.Voornaam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <TextBlock
                                            FontSize="15"
                                            Foreground="Black"
                                            Text="{Binding Persoon.Naam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    </StackPanel>
                                    <Path
                                        Grid.Column="2"
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Left"
                                        Fill="Black"
                                        Stretch="Fill">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Data" Value="{StaticResource myLock}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                        <Setter Property="Data" Value="{StaticResource myUnLock2}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>




            </Grid>


        </Border>


    </Grid>
</UserControl>
