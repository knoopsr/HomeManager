<UserControl
    x:Class="HomeManager.View.ucFotoCarousel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid DataContext="{Binding Source={StaticResource VML}, Path=FotoCarouselViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="250" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource HomepageTextBlockTitel}"
            Text="Foto Carrousel" />
        <Image
            Grid.Row="1"
            Source="{Binding CurrentPhoto.FolderPath}"
            Stretch="Uniform" />

        <StackPanel
            Grid.Row="2"
            Margin="5"
            HorizontalAlignment="Center"
            Background="{StaticResource myTitleBar}"
            Orientation="Horizontal">
            <Button
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding cmdSave}"
                CommandParameter="{Binding}"
                Content="FotoMap"
                Style="{StaticResource myExpanderDagboek}" />

        </StackPanel>


    </Grid>
</UserControl>
