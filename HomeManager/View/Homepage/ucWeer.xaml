<UserControl
    x:Class="HomeManager.View.ucWeer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:HomeManager.ViewModel.Homepage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid DataContext="{Binding Source={StaticResource VML}, Path=WeerViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Center"
            FontFamily="Ariel"
            FontSize="26"
            FontWeight="Bold"
            Foreground="DarkBlue"
            Text="Stad:" />
        <TextBox
            Grid.Row="1"
            Width="200"
            BorderBrush="DarkBlue"
            FontFamily="Ariel"
            FontSize="14"
            Text="{Binding SelectedCity, UpdateSourceTrigger=PropertyChanged}" />
        <!--  Gemeente invoer  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Button
                Width="100"
                Background="LightBlue"
                BorderBrush="DarkBlue"
                Command="{Binding ZoekWeerCommand}"
                CommandParameter="{Binding}"
                Content="Zoek Weer" />
            <Button
                Width="100"
                Background="LightBlue"
                BorderBrush="DarkBlue"
                Command="{Binding OpslaanStadCommand}"
                CommandParameter="{Binding}"
                Content="Opslaan" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Margin="5,0,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="50"
                Background="LightBlue"
                BorderBrush="DarkBlue"
                Command="{Binding VorigeDagCommand}"
                CommandParameter="{Binding}"
                Content="◀" />
            <Button
                Width="50"
                Background="LightBlue"
                BorderBrush="DarkBlue"
                Command="{Binding VolgendeDagCommand}"
                CommandParameter="{Binding}"
                Content="▶" />
        </StackPanel>

        <ListView
            Grid.Row="4"
            Width="400"
            Margin="5"
            Background="Transparent"
            Foreground="Transparent"
            ItemsSource="{Binding HuidigeDagVoorspelling}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <Image
                            Width="50"
                            Height="50"
                            Source="{Binding Icoon}" />
                        <TextBlock
                            Width="150"
                            FontWeight="Bold"
                            Foreground="DarkBlue"
                            Text="{Binding DatumTijdString}" />
                        <TextBlock
                            Width="100"
                            FontWeight="Bold"
                            Foreground="DarkBlue"
                            Text="{Binding Temperatuur, StringFormat='{} {0}°C'}" />
                        <TextBlock
                            Width="200"
                            FontWeight="Bold"
                            Foreground="DarkBlue"
                            Text="{Binding Omschrijving}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
