<UserControl
    x:Class="HomeManager.View.ucFavorieteVenster"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="250" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Titel  -->
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource HomepageTextBlockTitel}"
            Text="Favoriete Vensters" />

        <!--  ListView menu en dubbelklik  -->
        <ListView
            Grid.Row="1"
            ItemsSource="{Binding FavorieteVensters}"
            SelectedItem="{Binding SelectedVenster, Mode=TwoWay}"
            Style="{StaticResource HomepageListView}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding cmdOpen}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListView}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.Resources>
                <Style BasedOn="{StaticResource HomepageListViewItems}" TargetType="ListViewItem" />
                <Style BasedOn="{StaticResource HomepageListViewColumn}" TargetType="GridViewColumnHeader" />
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="250" Header="Venster">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Style="{StaticResource HomepageTextBlock}" Text="{Binding VensterNaam}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!--  Actieknoppen  -->
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            Background="{StaticResource myTitleBar}"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Command="{Binding cmdDelete}"
                CommandParameter="{Binding SelectedVenster}"
                Style="{StaticResource DeletePersoon}" />
        </StackPanel>
    </Grid>
</UserControl>
