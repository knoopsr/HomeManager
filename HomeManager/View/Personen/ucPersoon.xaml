<UserControl
    x:Class="HomeManager.View.ucPersoon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:HomeManager.Converter"
    xmlns:behaviors="clr-namespace:HomeManager.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter" />
    </UserControl.Resources>

    <Grid DataContext="{Binding Source={StaticResource VML}, Path=PersoonViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.ColumnSpan="5"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="2">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myPathPeople}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock Style="{StaticResource TitleBarText}" Text="Persoon" />

                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="Top" />
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="140" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />

                </Grid.RowDefinitions>
                <ListBox
                    Name="lstListView"
                    Grid.Row="1"
                    Grid.RowSpan="6"
                    Grid.Column="1"
                    Width="250"
                    MaxHeight="750"
                    ItemsSource="{Binding MijnCollectie}"
                    SelectedItem="{Binding MijnSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <!--  Standaardachtergrond en rand verwijderen  -->
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Margin" Value="0,2,0,2" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

                            <!--  Aangepaste ControlTemplate  -->
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border
                                            Name="Border"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <!--  Geselecteerd item  -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{x:Null}" />
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{x:Null}" />
                                            </Trigger>
                                            <!--  MouseOver  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                                <Setter TargetName="Border" Property="BorderBrush" Value="Transparent" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="205"
                                Margin="5"
                                Padding="2"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="White" />
                                        <Setter Property="BorderBrush" Value="Black" />
                                        <Style.Triggers>
                                            <!--  Geselecteerd item  -->
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                <Setter Property="Background" Value="LightBlue" />
                                                <Setter Property="BorderBrush" Value="DarkBlue" />
                                                <Setter Property="BorderThickness" Value="2" />
                                            </DataTrigger>
                                            <!--  MouseOver  -->
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                <Setter Property="Background" Value="LightBlue" />
                                                <Setter Property="BorderBrush" Value="DarkBlue" />
                                                <Setter Property="BorderThickness" Value="2" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal">

                                    <Border
                                        Width="60"
                                        Height="60"
                                        HorizontalAlignment="Left"
                                        BorderBrush="Gray"
                                        BorderThickness="1"
                                        CornerRadius="30">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Foto, TargetNullValue='https://miro.medium.com/v2/resize:fit:1400/1*w0u2TZpEp3WfKMrlL5jTSw.png'}" Stretch="UniformToFill" />
                                        </Border.Background>

                                    </Border>


                                    <StackPanel Margin="10,0,0,0" Orientation="Vertical">
                                        <TextBlock
                                            Margin="0,5,0,8"
                                            FontWeight="Bold"
                                            Text="{Binding Naam}" />
                                        <TextBlock Margin="0,8,0,0" Text="{Binding Voornaam}" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <TextBlock
                    x:Name="Naam"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    Text="Naam"
                    TextAlignment="Right" />
                <TextBox
                    x:Name="txtNaam"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5"
                    Text="{Binding MijnSelectedItem.Naam, 
                    Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
                    ValidatesOnDataErrors=True, NotifyOnValidationError=true, 
                    ValidatesOnExceptions=True}" />

                <TextBlock
                    x:Name="Voornaam"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="5"
                    Text="Voornaam"
                    TextAlignment="Right" />
                <TextBox
                    x:Name="txtVoorNaam"
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="5"
                    Text="{Binding MijnSelectedItem.Voornaam, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=true, ValidatesOnExceptions=True}" />

                <TextBlock
                    x:Name="Foto"
                    Grid.Row="3"
                    Grid.Column="2"
                    Text="Foto"
                    TextAlignment="Right" />

                <StackPanel
                    Grid.Row="3"
                    Grid.RowSpan="2"
                    Grid.Column="3"
                    Orientation="Horizontal">
                    <Border
                        Width="75"
                        Height="75"
                        Margin="3,0,0,0"
                        HorizontalAlignment="Left"
                        AllowDrop="True"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="35">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding MijnSelectedItem.Foto, TargetNullValue={x:Null}}" Stretch="UniformToFill" />
                        </Border.Background>
                        <i:Interaction.Behaviors>
                            <behaviors:clsDragDropBehavior DropCommand="{Binding cmdDropPicture}" />
                        </i:Interaction.Behaviors>
                    </Border>
                    <Button
                        x:Name="btnUploadPicture"
                        Command="{Binding cmdUploadPicture}"
                        Style="{StaticResource UploadPersoonButton}"
                        ToolTip="Voeg profielfoto toe" />
                </StackPanel>


                <TextBlock
                    Grid.Row="5"
                    Grid.Column="2"
                    Margin="8"
                    Text="Geboortedatum"
                    TextAlignment="Right" />

                <DatePicker
                    Name="dpGeboorteDatum"
                    Grid.Row="5"
                    Grid.Column="3"
                    Margin="5"
                    SelectedDate="{Binding MijnSelectedItem.Geboortedatum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                    SelectedDateFormat="Short" />



                <TextBlock
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="4"
                    Text="Ben jij een gebruiker?"
                    TextAlignment="Right" />
                <CheckBox
                    x:Name="cbIsGebruiker"
                    Grid.Row="6"
                    Grid.Column="3"
                    Margin="5"
                    IsChecked="{Binding MijnSelectedItem.IsApplicationUser, Mode=TwoWay}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>