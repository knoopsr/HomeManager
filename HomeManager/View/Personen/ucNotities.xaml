<UserControl
    x:Class="HomeManager.View.ucNotities"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:HomeManager.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="clr-namespace:HomeManager.Helpers"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="400"
    d:DesignWidth="450"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">
    <Grid DataContext="{Binding Source={StaticResource VML}, Path=NotitiesViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.ColumnSpan="5"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="2">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myPathNote}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock Style="{StaticResource TitleBarText}" Text="Notities" />

                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="Top" />
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <!--  Linkerkolom  -->
                    <ColumnDefinition Width="250" />
                    <!--  Kolom voor txtOnderwerp en tbNotities  -->
                    <ColumnDefinition Width="100" />
                    <!--  Vaste marge aan de rechterkant  -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="250" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <TextBlock
                    x:Name="tbNaam"
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="{Binding MijnSelectedPersoonItem, Mode=OneWay}" />

                <TextBlock
                    x:Name="tbOnderwerp"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    Text="Onderwerp"
                    TextAlignment="Right" />
                <TextBox
                    x:Name="txtOnderwerp"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    Text="{Binding MijnSelectedItem.Onderwerp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=true, ValidatesOnExceptions=True}"
                    TextWrapping="Wrap" />

                <TextBlock
                    x:Name="Notitie"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="5"
                    Text="Notities"
                    TextAlignment="Right" />
                <!--<TextBox
                     x:Name="tbNotities"
                     Grid.Row="3"
                     Grid.Column="1"
                     Height="250"
                     Margin="5"
                     Text="{Binding MijnSelectedItem.Notitie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=true, ValidatesOnExceptions=True}" />-->
                <RichTextBox
                    x:Name="rtbNotities"
                    Grid.Row="3"
                    Grid.Column="1"
                    Height="250"
                    Margin="5"
                    helpers:clsRichTextBoxHelper.RtfText="{Binding MijnSelectedItem.Notitie, Mode=TwoWay}"
                    helpers:clsRichTextBoxHelper.BindBack="True" />





                <!--  Werkbalk  -->
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"
                    Orientation="Horizontal">
                    <Button
                        Command="{Binding BoldCommand}"
                        CommandParameter="{Binding ElementName=rtbNotities}"
                        Content="B"
                        FontWeight="Bold" />
                    <Button
                        Command="{Binding ItalicCommand}"
                        CommandParameter="{Binding ElementName=rtbNotities}"
                        Content="I"
                        FontStyle="Italic" />
                    <Button
                        Command="{Binding UnderlineCommand}"
                        CommandParameter="{Binding ElementName=rtbNotities}"
                        Content="U"/>
                    <Button
                        Command="{Binding BulletCommand}"
                        CommandParameter="{Binding ElementName=rtbNotities}"
                        Content="•" />
                    <Button
                        Command="{Binding NumberedCommand}"
                        CommandParameter="{Binding ElementName=rtbNotities}"
                        Content="1." />
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>
