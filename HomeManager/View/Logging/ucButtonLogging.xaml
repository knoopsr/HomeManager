<UserControl
    x:Class="HomeManager.View.ucButtonLogging"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="600"
    d:DesignWidth="900"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">
    <Grid DataContext="{Binding Source={StaticResource VML}, Path=ButtonLoggingViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="1">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myPathSetting}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="Overzicht Logging Buttons" />
                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="top" />
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="700" />

                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="300" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="1"
                 Margin="5,5,0,0"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <ComboBox
                        Width="200"
                        DisplayMemberPath="AccountName"
                        ItemsSource="{Binding MijnAccounten}"
                        SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                        SelectedValuePath="AccountID" />
                    <ComboBox
                        Margin="5,0,0,0"
                        Width="200"                     
                        ItemsSource="{Binding MijnActies}"
                        SelectedItem="{Binding SelectedActies, Mode=TwoWay}"
                        />

                    <ComboBox
                        Margin="5,0,0,0"
                        Width="200"                   
                        ItemsSource="{Binding MijnActieTargets}"
                        SelectedItem="{Binding SelectedActieTargets, Mode=TwoWay}"
                   />



                </StackPanel>

                <DataGrid
                    x:Name="BudgetDataInkomsten"
                    Grid.Row="3"
                    Grid.Column="1"
                    MaxHeight="300"
                    AutoGenerateColumns="False"
                    ColumnWidth="*"
                    IsReadOnly="True"
                    ItemsSource="{Binding MijnGefilterdeCollectie}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding AccountName}"
                            Header="Account" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding ActionName}"
                            Header="Action" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding ActionTarget}"
                            Header="Target" />
                        <DataGridTextColumn
                            Width="auto"
                            Binding="{Binding LogTime}"
                            Header="Datum Tijd" />
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="HorizontalScrollBarVisibility" Value="Visible" />
                            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>

            </Grid>

        </Border>

    </Grid>
</UserControl>
