<UserControl
    x:Class="HomeManager.View.ucOverzicht"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:HomeManager.Converter"
    xmlns:Helpers="clr-namespace:HomeManager.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="800"
    d:DesignWidth="800"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter" />
        <Converters:clsDateFormatConverter x:Key="DateFormatConverter" />
    </UserControl.Resources>



    <Grid DataContext="{Binding Source={StaticResource VML}, Path=TransactieViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Border
            Grid.Row="0"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="1">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myPathEuro}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="Budget Overzicht" />

                </StackPanel>


            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="80" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>



                <!--  Selectie  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Jaar:" />
                    <ComboBox
                        x:Name="JaarCbo"
                        Width="120"
                        Margin="10,0,0,0" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text=" Maand:" />
                    <ComboBox
                        x:Name="MaandCbo"
                        Width="120"
                        Margin="10,0,0,0" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text=" Categorie:" />
                    <ComboBox
                        x:Name="CategorieCbo"
                        Width="120"
                        Margin="10,0,0,0" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text=" Begunstigde:" />
                    <ComboBox
                        x:Name="BegunstigdeCbo"
                        Width="120"
                        Margin="10,0,0,0" />
                </StackPanel>

                <!--  DataGrid  -->

                <DataGrid
                    x:Name="BudgetDataInkomsten"
                    Grid.Row="1"
                    Height="200"
                    Margin="5"
                    AutoGenerateColumns="True"
                    BorderBrush="LightGreen"
                    BorderThickness="4"
                    IsReadOnly="True"
                    ItemsSource="{Binding MijnInkomsten}">
                    <DataGrid.Resources>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="HorizontalScrollBarVisibility" Value="Auto" />
                            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>


                <!--  Resultaat Uitgaven  -->
                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="Inkomsten:"
                        FontSize="16" />
                    <TextBox
                        x:Name="Inkomsten"
                        Width="150"
                        Margin="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="Green" />
                </StackPanel>


                <!--  DataGrid  -->
                <DataGrid
                    x:Name="BudgetDataUitgaven"
                    Grid.Row="3"
                    Height="200"
                    Margin="5"
                    AutoGenerateColumns="True"
                    BorderBrush="Red"
                    BorderThickness="4"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="True"
                    ItemsSource="{Binding MijnUitgaven}"
                    VerticalScrollBarVisibility="Auto" />

                <!--  Resultaat Uitgaven  -->
                <StackPanel
                    Grid.Row="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="Uitgaven:   "
                        FontSize="16" />
                    <TextBox
                        x:Name="Uitgaven"
                        Width="150"
                        Margin="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="Red" />
                </StackPanel>

                <StackPanel
                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Label
                        Margin="5"
                        VerticalAlignment="Center"
                        Content="Result:   "
                        FontSize="16" />
                    <TextBox
                        x:Name="Result"
                        Width="150"
                        Margin="5"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="Black" />
                </StackPanel>
            </Grid>


        </Border>

    </Grid>
</UserControl>
