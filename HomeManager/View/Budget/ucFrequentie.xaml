<UserControl
    x:Class="HomeManager.View.ucFrequentie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Helpers="clr-namespace:HomeManager.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HomeManager.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:HomeManager.View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource myBackground}"
    mc:Ignorable="d">
    <Grid DataContext="{Binding Source={StaticResource VML}, Path=FrequentieViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Border
            Grid.Row="0"
            Background="{StaticResource myTitleBar}"
            BorderBrush="LightBlue"
            BorderThickness="1">
            <Grid>
                <StackPanel
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Path
                        Width="20"
                        Height="20"
                        Data="{StaticResource myPathSetting}"
                        Fill="White"
                        Stretch="Fill" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="Frequentie" />

                </StackPanel>
                <uc:ucWerkBalk HorizontalAlignment="Right" VerticalAlignment="Top" />

            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="5">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBox
                        Width="150"
                        Margin="5"
                        HorizontalAlignment="Right"
                        Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Command="{Binding ClearSearchCommand}"
                        CommandParameter="{Binding}"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate>
                                <Border Background="{StaticResource myBackground}">

                                    <Path
                                        Width="20"
                                        Height="20"
                                        Margin="5"
                                        Data="{StaticResource myFilterButton}"
                                        Fill="{StaticResource myTitleBar}"
                                        Stretch="Fill" />

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <ListBox
                    Name="Frequentie"
                    Grid.Row="2"
                    Grid.RowSpan="5"
                    Grid.Column="1"
                    Width="175"
                    Margin="5,2,0,2"
                    HorizontalAlignment="Left"
                    Foreground="#024f87"
                    ItemsSource="{Binding GefilterdeCollectie}"
                    SelectedItem="{Binding MijnSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Grid.Row="2"
                    Grid.Column="3"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    Content="Frequentie"
                    Foreground="#024f87" />
                <TextBox
                    x:Name="txtFrequentie"
                    Grid.Row="2"
                    Grid.Column="4"
                    Width="200"
                    Margin="5"
                    Background="White"
                    Foreground="#024f87"
                    Text="{Binding MijnSelectedItem.Frequentie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

                <Label
                    Grid.Row="3"
                    Grid.Column="3"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    Content="Aantal Dagen" />

                <TextBox
                    x:Name="txtAantalDagen"
                    Grid.Row="3"
                    Grid.Column="4"
                    Width="200"
                    Margin="5"
                    Background="White"
                    Text="{Binding MijnSelectedItem.AantalDagen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            </Grid>
        </Border>

    </Grid>
</UserControl>
